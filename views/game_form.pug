extends admin_layout

block content
  h1=title

  form(method='POST' action='')
    div(id="create-game-form")
      div.form-group
        label(for='game_name') Game Name:
        input#game_name.form-control(type='text' name='game_name' required='true' value=(undefined===game ? '' : g.game_name) )
        label(for='desc') Description:
        input#desc.form-control(type='text' name='desc' required='true' value=(undefined===game ? '' : game.desc))
      div.form-group
        label(for='genre') Genre:
        select(name='genre',id="genre" multiple)
          each genre in genre_list
            option(value=genre._id)=genre.name 
      div.form-group
        label(for='price') Price:
        input#price.form-control(type='text' name='price' required='true' value=(undefined===game ? '' : game.price))
        label(for='iconurl') Icon URL:
        input#iconurl.form-control(type='text' name='iconurl' required='true' value=(undefined===game ? '' : game.iconurl))
      button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg